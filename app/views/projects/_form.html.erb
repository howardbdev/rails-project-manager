<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %><br>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %><br>
  </div>
  <div class="field">
    <%= f.collection_check_boxes :tool_ids, Tool.available_tools, :id, :name %><br>
  </div>
  <div class="field">
    <%= f.label "Create a new tool:" %><br>
    <%= f.fields_for :tools, @project.tools.build do |tools_fields| %>
    <%= tools_fields.label :name %>
    <%= tools_fields.text_field :name %><br>
    <%= tools_fields.label :inventory %>
    <%= tools_fields.text_field :inventory, value: 1 %><br>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :due_date %>
    <%= f.datetime_local_field :due_date %><br>
  </div>
  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status %><br>
  </div>
  <%= f.submit class:"btn btn-success" %>
<% end %>
