
<%= form_for user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= if current_user == user || user.id.nil? %>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
  <% end %>
  <%= f.submit 'Sign Up' %><br>
<% end  %>
