<div class="row">
  <div class="col-6">

  </div>
  <div class="col-6 pull-right" id="quick-view-menu">
    <%= button_to "Users Index Quick View", users_path, method: :get, form_class: "user-quick-view", id:"user-index-qv-button" %>
    <%= button_to "Clear Quick View", users_path, method: :get, form_class: "clear-quick-view", id:"clear-quick-view-button" %>

  </div>
</div>
<div class="row">
  <div class="user-display col-6">
    <%= render @user %>
  </div>
  <div class="user-display quick-view-rt col-6">
    <div id="quick-view">
  </div>
  </div>
</div>
<% if current_user.outranks?(@user) %>
  <%= render partial: 'assignments/assign_projects_to_worker', locals: {worker: @user, assignment: @assignment} %>
<% end %>

<%= button_to "Edit #{@user.name}", edit_user_path, method: 'get' if current_user.can_edit_user?(@user)%>
